<?xml version="1.0" encoding="UTF-8"?>
<project name="HelloWorld" default="build" basedir="." description="a demo project">
 <property name="message" value="Hello World!"/>
 <property name="basedir" value="${project.basedir}" />
  
 <target name="clean" description="Clean up and create artifact directories">
  <delete dir="${basedir}/build/logs"/>

  <mkdir dir="${basedir}/build/logs"/>
 </target>
 
 <target name="parallelTasks" description="Run the phpcs tasks in parallel using a maximum of 2 threads.">
   <phingcall target="phpcs"/>
 </target>
 
 <target name="phpcs" description="Generate checkstyle.xml using PHP_CodeSniffer">
  <exec logoutput="true"
        command="/opt/lampstack/bitnami/php/bin/phpcs --report=checkstyle --report-file=${basedir}/build/logs/checkstyle.xml --standard=PSR2" />
 </target>
 
 <target name="build" depends="clean,parallelTasks"/>
  <echo msg="${message}"/>
 </target>
</project>
